<body>
    <div style="padding-top: 50px;" class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <h1 style="text-align: center; margin-bottom: 1rem; font-weight: bolder; text-shadow: 1px 1px #cdcdcd;">HMS Global Hospitality LLC</h1>
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 style="text-align: center; color: black;" class="title">Admin Registeration</h2>
                    <form method="POST" action="/register">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label style="color: black;" class="label">Employee Name</label>
                                    <input class="input--style-4" autocomplete="off" required type="text" name="name">
                                </div>
                                <div class="input-group">
                                    <label style="color: black;" class="label">Employee Email</label>
                                    <input class="input--style-4" autocomplete="off" required type="email" name="email">
                                </div>
                                <div class="input-group">
                                    <label style="color: black;" class="label">Employee Phone No</label>
                                    <input class="input--style-4" autocomplete="off" minlength="10" maxlength="10" required type="text" name="phnNo">
                                </div>
                                <div class="input-group">
                                    <label style="color: black;" class="label">Password</label>
                                    <input class="input--style-4" autocomplete="off" minlength="6" required type="password" name="password">
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button style="background-color: #C92C6D; margin-bottom: 30px;" class="btn btn--radius-2 btn--blue" type="submit">Register</button>
                        </div>
                    </form>
                    <a href="/login"><button style="background-color: black;" class="btn btn--radius-2 btn--blue" type="button">Login</button></a>
                </div>
            </div>
